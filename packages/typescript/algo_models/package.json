{
  "name": "algo_models",
  "version": "0.1.0",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/algo_models.node.cjs",
      "import": "./dist/algo_models.bundler.mjs"
    }
  },
  "scripts": {
    "build:wasm:esm": "wasm-pack build --out-dir ../../packages/typescript/algo_models/pkg --mode normal --release --target web ../../../crates/algo_models_ffi --no-default-features --features ffi_wasm",
    "build:wasm:cjs": "wasm-pack build --out-dir ../../packages/typescript/algo_models/pkg --mode normal --release --target nodejs ../../../crates/algo_models_ffi --no-default-features --features ffi_wasm",
    "build:esm": "npm run build:wasm:esm && rollup -c rollup.config.esm.mjs",
    "build:cjs": "npm run build:wasm:cjs && rollup -c rollup.config.cjs.mjs",
    "build:types": "shx cp pkg/algo_models_ffi.d.ts ./dist/index.d.ts",
    "build": "shx rm -rf dist pkg types && npm run build:esm && npm run build:cjs && shx cp pkg/algo_models_ffi_bg.wasm ./dist/ && npm run build:types",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:debug": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check ."
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@microsoft/api-extractor": "^7.50.0",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-esm-shim": "^0.1.7",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@rollup/plugin-wasm": "^6.2.2",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "prettier-plugin-jsdoc": "^1.3.0",
    "rollup": "^4.34.8",
    "shx": "^0.3.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3",
    "wasm-pack": "^0.13.1",
    "@noble/ed25519": "^2.2.3",
    "@types/bun": "^1.2.4",
    "@types/node": "^22.13.9",
    "bun": "^1.2.4"
  }
}
